{
    // See https://code.visualstudio.com/docs/editor/intellisense#_customizing-intellisense
    // Don't show completions unless I manually request one with ctrl-space
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false,
        "snippet": false
    },
    // Combined with a keyinding of shift+ctrl+space for triggerParameterHints for less visual clutter
    "editor.parameterHints.enabled": false,
    "editor.suggestOnTriggerCharacters": false,
    "editor.wordWrapColumn": 200,
    "editor.fontFamily": "'Source Code Pro', Menlo, Monaco, 'Courier New', monospace",
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    // Don't highlight occurrences of the word under the cursor
    "editor.occurrencesHighlight": false,
    // Characters that will be used as word separators when doing word related navigations or operations.
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    // format on paste does not work the same as reformatting the selection
    // "editor.formatOnPaste": true,
    "files.associations": {
        "*.view": "php"
    },
    "diffEditor.renderSideBySide": false,
    // If I select a file from the search pane open it in a new tab
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // Hilight modified tabs in addition to the dot
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": "vscode-icons",
    // Do not complain about undefined classes in vendor such as \App and \Gateway
    "intelephense.diagnostics.undefinedTypes": false,
    // Don't show errors while I'm in the middle of writing a statement
    // "errorLens.delay": 20000,
    "html.format.wrapLineLength": 0,
    "files.trimTrailingWhitespace": true,
    "phpcs.executablePath": "/Users/st25673/.composer/vendor/bin/phpcs",
    "rewrap.wrappingColumn": 120,
    "editor.hover.delay": 750,
    // Don't show unnecessary suggestions like global variables. For example, only suggest properties/methods for an object.
    "php.suggest.basic": false,
    "diffEditor.ignoreTrimWhitespace": true,
    // "todo-tree.tree.showScanModeButton": false,
    "sql-formatter.linesBetweenQueries": 4,
    "workbench.editor.enablePreview": false,
    "markdown-pdf.breaks": true,
    "markdown-pdf.displayHeaderFooter": false,
    "markdown-pdf.format": "Letter",
    "editor.formatOnType": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "todo-tree.general.tags": [
        "BUG",
        "METRIC",
        "QUESTION",
        "TODO",
        "IMPORTANT",
        "[ ]",
        "[x]"
    ],
    "todo-tree.highlights.customHighlight": {
        "METRIC": {
            "icon": "graph"
        },
        "QUESTION": {
            "icon": "question"
        },
        "TODO": {
            "icon": "alert"
        },
        "IMPORTANT": {
            "icon": "star-fill"
        },
        "[ ]": {
            "icon": "check-circle"
        }
    },
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.highlights.useColourScheme": true,
    "editor.tokenColorCustomizations": {
        // Custom markdown color scheme to provide visual discrimation between elements without being harsh on the eyes
        // Use "Developer: Inspect Editor Tokens and Scopes" to discover TextMate scopes
        "textMateRules": [
            {
                // regular text, very light grey
                "scope": "text.html.markdown",
                "settings": {
                    "foreground": "#CFCFCF"
                }
            },
            {
                // Level 1 list
                "scope": [
                    "markup.list.unnumbered.markdown",
                    "markup.list.numbered.markdown"
                ],
                "settings": {
                    // "foreground": "#83A598"
                    "foreground": "#997f3f"
                }
            },
            {
                // Level 2 list
                "scope": [
                    "markup.list.unnumbered.markdown markup.list.unnumbered.markdown",
                    "markup.list.numbered.markdown markup.list.numbered.markdown"
                ],
                "settings": {
                    "foreground": "#289c74"
                }
            },
            {
                // Code block
                "scope": "markup.fenced_code.block.markdown",
                "settings": {
                    "foreground": "#c49987"
                }
            },
            {
                // Hyperlinks portion of a link, muted blue
                "scope": "meta.link.inline.markdown",
                "settings": {
                    "foreground": "#437cab"
                }
            }
        ]
    },
    /*
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    */
}